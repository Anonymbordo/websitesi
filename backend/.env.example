# Copy this file to .env (or set real env vars in your deployment) and fill values. Do NOT commit real secrets.

# FastAPI / Twilio (SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+901234567890  # E.164 format
DEFAULT_COUNTRY_CODE=90
DEV_SMS_FALLBACK=true

# Mailgun (optional)
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_API_KEY=key-xxxxxxxxxxxxxxxxxxxx

# Gmail SMTP (optional)
GMAIL_USER=you@gmail.com
GMAIL_PASSWORD=your_app_password

# JWT secret
SECRET_KEY=change-this-secret

# Firebase Admin (optional) - either JSON string or path
# FIREBASE_SERVICE_ACCOUNT='{"type": ... }'
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/serviceAccountKey.json
# Environment variables
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
DATABASE_URL=postgresql://username:password@localhost/education_platform

# Twilio (SMS/OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AI Services
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
GROQ_API_KEY=your_groq_api_key

# Email Service
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=uploads

# Development/Production
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000